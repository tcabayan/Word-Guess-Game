//Global Variables
//==================
//Create an array of words
var word = ['madonna', 'aerosmith', 'eurythmics', 'wham', 'queen', 'blondie', 'clash']

//Choose words randomly
var randWord = Math.floor(Math.random() * word.length);
var chosenWord = word[randWord]; 
var underScore = [];

//User Guesses
var rightWord = [];
var wrongWord = [];


//Counter Variables
var wins = 0;
var losses = 0;
var lives = 9;

//Dom manipulation
var docUnderScore = document.getElementsByClassName('underscore');
var docRightGuess = document.getElementsByClassName('rightGuess');
var docWrongGuess = document.getElementsByClassName('wrongGuess');


//Testing
console.log(chosenWord);

//Main
//================
//Game Start Function

//Step One: Computer randomly generates word from word array
var randWord = Math.floor(Math.random() * word.length);
var chosenWord = word[randWord]; 
var underScore = [];

//Create underscores based on Length of Word
var generateUnderscore = () => {
    for (var i=0; i<chosenWord.length; i++) {
        underScore.push('_');
    }
    return underScore;
}
 
//Get users guess
document.addEventListener('keypress', (event) => {
    var keyword = String.fromCharCode(event.keyCode).toLowerCase;
//if Users guess is right
    if(chosenWord.indexOf(keyword)> -1){
    //add to right words array
        rightWord.push(keyword);
    //replace underscore with right letter
        underScore[chosenWord.indexOf(keyword)] = keyword;
        docUnderScore[0].innerHTML = underScore.join('');  
        docRightGuess[0].innerHTML = rightWord;

    //Check to see if user word matches guesses
        if(underScore.join('') == chosenWord) {
            alert('You Win!');
        } 
    //TALLY A WIN
    }
    else {
        wrongWord.push(keyword);
        docWrongGuess[0].innerHTML = wrongWord;
        docLives
    //REDUCE FROM REMAINING NUMBER OF GUESSES
    }  
});  

docUnderScore[0].innerHTML = generateUnderscore().join('');
